echo "检查ESLint错误..."
pnpm lint; eslint_exit=$?
echo ""
echo "检查TypeScript类型错误..."
pnpm tsc -b --noEmit; tsc_exit=$?
echo ""

# 如果有错误，显示总结
if [ $eslint_exit -ne 0 ] || [ $tsc_exit -ne 0 ]; then
  echo "❌ 代码检查失败！"
  echo "   - ESLint: $([ $eslint_exit -eq 0 ] && echo '✅' || echo '❌')"
  echo "   - TypeScript: $([ $tsc_exit -eq 0 ] && echo '✅' || echo '❌')"
  exit 1
else
  echo "✅ 所有检查通过！"
  exit 0
fi
